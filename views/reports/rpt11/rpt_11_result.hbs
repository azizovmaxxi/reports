<div class="table-responsive">
    <!-- START BLOCK FOR PRINT  -->
    <div id="printReport">
        <div class="text-center">
            <p><b><h4>Доля лиц с выявленными факторами риска</h4></b></p>
        </div>
        <div class="text-left">
            <div>ЛПУ: {{titleData.lpu_title}}</div>
            <div>
                <span>Отчетный период:
                  <span>{{dateFormat titleData.sdate}}</span> -
                  <span>{{dateFormat titleData.edate}}</span>
                </span>
            </div>
            <div> Подсчет данных: <span>{{titleData.type_rpt}}</span> </div>
            <div>{{#if titleData.icd10}}<span> МКБ-10: {{titleData.icd10}}</span>{{/if}}</div>
        </div>
        <div id="printBtnId">
            <button class="btn btn-primary print-btn" target-print="printReport" id="printBtnId">
                <span class="glyphicon glyphicon-print" aria-hidden="true"></span> Печать
            </button>
        </div>

        <div class="result-data">
            {{#if data.length}}
                <table class="table table-responsive rpt_table">
                    <thead class="thead-dark">
                        <tr class="tr" style="background: lightgray">
                            <th class="th" rowspan="2"></th>
                            <th class="th" rowspan="2">№ Строки</th>
                            <th class="th" rowspan="2">Всего</th>
                            <th class="th" colspan="7">В том числе</th>
                        </tr>
                        <tr class="tr" style="background: lightgray">
                            <th class="th">7-14 лет</th>
                            <th class="th">15-17 лет</th>
                            <th class="th">18-20 лет</th>
                            <th class="th">21-30 лет</th>
                            <th class="th">31-40 лет</th>
                            <th class="th">41-49 лет</th>
                            <th class="th">50 лет и старше</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{#each data}}
                        <tr class="tr">
                            <td class="td">{{this.sex}}</td>
                            <td class="td">{{this.num}}</td>
                            <td class="td">{{this.c1}}</td>
                            <td class="td">{{this.c2}}</td>
                            <td class="td">{{this.c3}}</td>
                            <td class="td">{{this.c4}}</td>
                            <td class="td">{{this.c5}}</td>
                            <td class="td">{{this.c6}}</td>
                            <td class="td">{{this.c7}}</td>
                            <td class="td">{{this.c8}}</td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            {{/if}}
        </div>

    </div>
    <!-- END BLOCK FOR PRINT  -->

    <div id="printBtnId">
        <button class="btn btn-primary print-btn" target-print="printReport" id="printBtnId">
            <span class="glyphicon glyphicon-print" aria-hidden="true"></span> Печать
        </button>
    </div>
</div>