<div class="table-responsive">
    <!-- START BLOCK FOR PRINT  -->
    <div id="printReport">
        <div class="text-center">
            <p><b><h4>Структура умерших на территории обслуживания</h4></b></p>
        </div>
        <div class="text-left">
            <div>ЛПУ: {{titleData.lpu_title}}</div>
            <div>
                <span>Отчетный период:
                  <span>{{dateFormat titleData.sdate}}</span> -
                  <span>{{dateFormat titleData.edate}}</span>
                </span>
            </div>
            {{#if titleData.age}}
                <div> Возрастная категория: <span>{{titleData.age}}</span> </div>
            {{/if}}
            {{#if titleData.sex_id}}
                <div> Пол: <span>{{titleData.sex_id}}</span> </div>
            {{/if}}
        </div>
        <div id="printBtnId">
            <button class="btn btn-primary print-btn" target-print="printReport" id="printBtnId">
                <span class="glyphicon glyphicon-print" aria-hidden="true"></span> Печать
            </button>
        </div>

        <div class="result-data">
            {{#if data.length}}
                <table class="table table-responsive rpt_table">
                    <thead class="thead-dark">
                        <tr class="tr" style="background: lightgray">
                            <th class="th" rowspan="3">Наименование классов и отдельных причин смерти</th>
                            <th class="th" rowspan="3">Код строки</th>
                            <th class="th" rowspan="3">Шифр по МКБ-10 пересмотра</th>
                            <th class="th" colspan="6">Умерло за отчетный период</th>
                            
                        </tr>
                        <tr class="tr" style="background: lightgray">
                            <th class="th" rowspan="2">Всего</th>
                            <th class="th" colspan="3">в т.ч. дети</th>
                            <th class="th" rowspan="2">подростки   (15 - 17лет 11мес. 29дн.)</th>
                            <th class="th" rowspan="2">взрослые</th>
                            
                        </tr>
                        <tr class="tr" style="background: lightgray">
                            <th class="th">Всего</th>
                            <th class="th">дети до 1 года</th>
                            <th class="th">дети (1-4 лет 11мес. 29дн.)</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{#each data}}
                        <tr class="tr">
                            <td class="td">{{this.full_name}}</td>
                            <td class="td">{{this.code}}</td>
                            <td class="td">{{this.icd10}}</td>
                            <td class="td">{{this.c1}}</td>
                            <td class="td">{{this.c2}}</td>
                            <td class="td">{{this.c3}}</td>
                            <td class="td">{{this.c4}}</td>
                            <td class="td">{{this.c5}}</td>
                            <td class="td">{{this.c6}}</td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            {{/if}}
        </div>

    </div>
    <!-- END BLOCK FOR PRINT  -->

    <div id="printBtnId">
        <button class="btn btn-primary print-btn" target-print="printReport" id="printBtnId">
            <span class="glyphicon glyphicon-print" aria-hidden="true"></span> Печать
        </button>
    </div>
</div>